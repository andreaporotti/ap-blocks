{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "ap-blocks/slider",
	"version": "1.0.0",
	"title": "Slider",
	"category": "ap-blocks",
	"icon": "images-alt2",
	"description": "A simple slider.",
	"keywords": [ "slider", "slideshow" ],
	"attributes": {
		"slidesPerView": {
			"type": "integer",
			"default": 1
		},
		"loop": {
			"type": "boolean",
			"default": false
		}
	},
	"supports": {
		"html": false
	},
	"textdomain": "ap-blocks",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"viewScript": "file:./js/frontend.js",
	"style": "file:./style-index.css"
}
